
<h2 class="page-title">Edit Product</h2>
<a href="/products" class="btn btn-primary">Back to all Products</a>
<br> <br>


<form action="/admin/products/edit-product/{{id}}" method="post" enctype="multipart/form-data" >
    <div class="form-group">
        <label for="">Title</label>
        <input type="text"  class="form-control" name="title" value="{{title}}" placeholder="Title">
    </div>

    <div class="form-group">
        <label for="">Current Image</label>
        <img id="image" src="../../productImages/{{id}}{{image}}" alt="">
    
    </div>

    <div class="form-group">
        <label for="">Upload Image</label>
        <input type="file" class="form-control" name="image" id="img">
        <img src="#" id="imgPreview" alt="img">
    </div>

    <div class="form-group">
        <label for="">Price</label>
        <input type="number"  class="form-control" name="price" value="<%=price%>" placeholder="Item price">
    </div> 

  
    
    <div class="form-group">
        <label for="">Description</label>
        <textarea name="desc" class="form-control" id="ta" cols=" " rows=" " placeholder="Description"><%= desc %></textarea>
    </div>

  <input type="hidden" name="pimage" value="{{image}} ">
    <button class="btn btn-default">Submit</button>
    <script>

        function readURL(input){
            if(input.files && input.files[0]){
                var reader = new FileReader();

                reader.onload = function(e) {
                   $("#imgPreview").attr('src',e.target.result).width(100).height(100); 
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#img").change(function(){
            readURL(this);
        })
    </script>

   

</form>
